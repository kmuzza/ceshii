{
  "name": "OpenHarmony Development Environment",
  "image": "swr.cn-south-1.myhuaweicloud.com/openharmony-docker/docker_oh_mini:3.2",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true,
    "git.enableCommitSigning": false
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode.cpptools",
    "redhat.vscode-yaml"
    // 添加其他对OpenHarmony开发有帮助的VS Code扩展
  ],
  "forwardPorts": [
    // 在这里配置需要转发的端口，例如8080
  ],
  "postCreateCommand": "echo 'OpenHarmony环境准备就绪！'",
  "remoteUser": "root"
}
